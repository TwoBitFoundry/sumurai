{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "performance": {
        "noImgElement": "off"
      },
      "complexity": {
        "noStaticOnlyClass": "off"
      },
      "style": {
        "useComponentExportOnlyModules": "off"
      },
      "a11y": {
        "useButtonType": "warn"
      },
      "correctness": {
        "useUniqueElementIds": "off"
      }
    },
    "domains": {
      "next": "all",
      "react": "all"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingCommas": "es5"
    }
  },
  "css": {
    "linter": {
      "enabled": false
    }
  },
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.json",
      "!.next",
      "!node_modules",
      "!coverage",
      "!out"
    ]
  },
  "overrides": [
    {
      "includes": ["tests/**", "**/*.test.*", "**/*.spec.*"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          },
          "correctness": {
            "noUnusedVariables": "off",
            "noUnsafeOptionalChaining": "off"
          },
          "style": {
            "noNonNullAssertion": "off"
          },
          "a11y": {
            "useButtonType": "off"
          }
        }
      }
    },
    {
      "includes": ["next.config.js", "jest.config.cjs", "postcss.config.js", "tailwind.config.js"],
      "linter": {
        "rules": {
          "style": {
            "noCommonJs": "off"
          }
        }
      }
    },
    {
      "includes": ["src/components/widgets/HeroStatCard.tsx"],
      "linter": {
        "rules": {
          "suspicious": {
            "noArrayIndexKey": "off"
          }
        }
      }
    }
  ]
}
