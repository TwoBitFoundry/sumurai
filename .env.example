# Core secrets (generate fresh values before deploying)
JWT_SECRET=replace-with-32+hex-from-openssl
ENCRYPTION_KEY=replace-with-64+hex-from-openssl

# Default provider (teller or plaid)
DEFAULT_PROVIDER=teller

# Plaid sandbox configuration (mock data only)
PLAID_CLIENT_ID=mock_client_id
PLAID_SECRET=mock_secret
PLAID_ENV=sandbox

# Plaid sandbox configuration (mock data only)
TELLER_CERT_PATH=./certs/teller_certificate.pem
TELLER_KEY_PATH=./certs/teller_private_key.pem
TELLER_ENV=sandbox
TELLER_APPLICATION_ID=your-teller-app-id

# Database configuration (local dev containers)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

POSTGRES_DB=accounting

# Seq configuration (API key used by both backend and frontend OTEL)
SEQ_PASSWORD=ChangeMe123!
SEQ_API_KEY=your-seq-api-key

# Logging
BACKEND_RUST_LOG=info

# Backend Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://seq:80/ingest/otlp/v1/traces
OTEL_EXPORTER_OTLP_HEADERS=X-Seq-ApiKey=${SEQ_API_KEY}
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_STARTUP_TEST_SPAN=0

# Frontend OpenTelemetry Configuration
NEXT_PUBLIC_OTEL_ENABLED=true
NEXT_PUBLIC_OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:8080/ingest/otlp
NEXT_PUBLIC_OTEL_SERVICE_NAME=sumurai-frontend
NEXT_PUBLIC_OTEL_SERVICE_VERSION=1.0.0
NEXT_PUBLIC_OTEL_SANITIZE_HEADERS=true
NEXT_PUBLIC_OTEL_SANITIZE_URLS=true
NEXT_PUBLIC_OTEL_CAPTURE_BODIES=false
NEXT_PUBLIC_OTEL_BLOCK_SENSITIVE_ENDPOINTS=true
NEXT_PUBLIC_OTEL_SEQ_API_KEY=your-seq-api-key
